        .image_container.leaf: img(src="../assets/images/hero_4.jpg")
    // }}}
    //- about{{{
    //--------------------------------------
    //               about
    //--------------------------------------
    section#about.grid.two
      aside.leaf.moved_left
        .image_container: img(src="../assets/images/hero_4.jpg")
        .image_container: img(src="../assets/images/hero_4.jpg")
        div
        .image_container: img(src="../assets/images/hero_4.jpg")
