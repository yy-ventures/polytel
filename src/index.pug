    // }}}
    //- footer{{{
    //--------------------------------------
    //               Footer
    //--------------------------------------
    section#contact.grid.three.leaf
      #footer__logo: img(src="../assets/images/logo_vertical.png").moved_left
      #footer__contact.faded_out
        h3 Contact
        p info@polytel.xyz
        p +8801859637967
      #footer__links.moved_right
        h3 Links
        a(href="#intro") Introduction
        a(href="#about") About
        a(href="#product") Product

