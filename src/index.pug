    //               Navigation
    //--------------------------------------
    nav
      input#toggler(type="checkbox")
      label(for="toggler" ): #menu_button: #bar

      a(href="#intro"): #logo: img(src="../assets/images/logo_horizontal.png")
      .menu
        a(href="#intro") home
        a(href="#about") about
        a(href="#product") product
        a(href="#contact") contact
    // }}}
    //- intro{{{
    //--------------------------------------
    //               Intro
    //--------------------------------------
    section#intro.grid.two
      article
        h1.faded_out Ipsum consectetur repellat officia dolor
