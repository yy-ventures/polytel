        .product_container.grid.two
          .colored_box
          .image_container: img(src="../assets/images/hero_4.jpg")

        .product_container
          .image_container: img(src="../assets/images/hero_4.jpg")
          .image_container: img(src="../assets/images/hero_4.jpg")
          .image_container: img(src="../assets/images/hero_4.jpg")
