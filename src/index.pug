    //--------------------------------------
    //               Footer
    //--------------------------------------
    section#contact.grid.three
      #footer__logo: img(src="../assets/images/logo_vertical.png")
      #footer__contact
        h3 Contact
        p info@polytel.xyz
        p +8801859637967
      #footer__links
        h3 Links
        a(href="#intro") Introduction
        a(href="#about") About
